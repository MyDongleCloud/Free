[Unit]
Description=Zigbee2MQTT
After=network.target

[Service]
Environment=NODE_ENV=production
Environment=ZIGBEE2MQTT_DATA=/disk/admin/modules/zigbee2mqtt
Type=simple
ExecStart=/usr/local/bin/node index.js
WorkingDirectory=/usr/local/modules/zigbee2mqtt/node_modules/zigbee2mqtt
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=10s
User=admin

[Install]
WantedBy=multi-user.target
