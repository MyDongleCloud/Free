[Allow admin group to manage services]
Identity=unix-group:admin
Action=org.freedesktop.systemd1.manage-units
ResultAny=yes
ResultInactive=yes
ResultActive=yes

[Allow admin group to use power actions]
Identity=unix-group:admin
Action=org.freedesktop.login1.*
ResultAny=yes
ResultInactive=yes
ResultActive=yes

[Allow admin group to modify networking]
Identity=unix-group:admin
Action=org.freedesktop.NetworkManager.settings.modify.system
ResultAny=yes
ResultInactive=yes
ResultActive=yes
