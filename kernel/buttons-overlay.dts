/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target = <&gpio>;
		__overlay__ {
			button_Up: button_Up {
				brcm,pins = <17>;
				brcm,function = <0>;
				brcm,pull = <2>;
			};
			button_Down: button_Down {
				brcm,pins = <20>;
				brcm,function = <0>;
				brcm,pull = <2>;
			};
			button_Left: button_Left {
				brcm,pins = <21>;
				brcm,function = <0>;
				brcm,pull = <2>;
			};
			button_Right: button_Right {
				brcm,pins = <13>;
				brcm,function = <0>;
				brcm,pull = <2>;
			};
		};
	};

	fragment@1 {
		target-path = "/";
		__overlay__ {
			button: button@0 {
				compatible = "gpio-keys";
				pinctrl-names = "default";
				pinctrl-0 = <&button_Up &button_Down &button_Left &button_Right>;
				status = "okay";
				buttonUp: buttonUp {
					linux,code = <103>;
					gpios = <&gpio 17 1>;
					label = "BUTTON_UP";
				};
				buttonDown: buttonDown {
					linux,code = <108>;
					gpios = <&gpio 20 1>;
					label = "BUTTON_DOWN";
				};
				buttonLeft: buttonLeft {
					linux,code = <105>;
					gpios = <&gpio 21 1>;
					label = "BUTTON_LEFT";
				};
				buttonRight: buttonRight {
					linux,code = <106>;
					gpios = <&gpio 13 1>;
					label = "BUTTON_RIGHT";
				};
			};
		};
	};
};
