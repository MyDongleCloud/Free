/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target = <&gpio>;
		__overlay__ {
			button_1: button_1 {
				brcm,pins = <23>;//17
				brcm,function = <0>;
				brcm,pull = <2>;
			};
			button_2: button_2 {
				brcm,pins = <26>;//21
				brcm,function = <0>;
				brcm,pull = <2>;
			};
			button_3: button_3 {
				brcm,pins = <2>;
				brcm,function = <0>;
				brcm,pull = <2>;
			};
			button_4: button_4 {
				brcm,pins = <13>;
				brcm,function = <0>;
				brcm,pull = <2>;
			};
		};
	};

	fragment@1 {
		target-path = "/";
		__overlay__ {
			button: button@0 {
				compatible = "gpio-keys";
				pinctrl-names = "default";
				pinctrl-0 = <&button_1 &button_2 &button_3 &button_4>;
				status = "okay";
				keyUp: keyUp {
					linux,code = <103>;
					gpios = <&gpio 23 1>;//17
					label = "KEY_UP";
				};
				keyDown: keyDown {
					linux,code = <108>;
					gpios = <&gpio 26 1>;//21
					label = "KEY_DOWN";
				};
				keyLeft: keyLeft {
					linux,code = <105>;
					gpios = <&gpio 2 1>;
					label = "KEY_LEFT";
				};
				keyRight: keyRight {
					linux,code = <106>;
					gpios = <&gpio 13 1>;
					label = "KEY_RIGHT";
				};
			};
		};
	};
};
