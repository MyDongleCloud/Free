{
	"module": "bugzilla",
	"name": "Bugzilla",
	"title": "Bug Tracking",
	"category": "Developer",
	"version": "5.3.3",
	"installMethod": "clone",
	"web": true,
	"essential": false,
	"finished": true,
	"ai": false,
	"database": "sqlite",
	"github": "bugzilla/bugzilla",
	"description": "A web-based general-purpose bugtracker and testing tool.",
	"keywords": [
		"Bug",
		"Bug tracking",
		"Error reporting",
		"Issue tracker",
		"Project management",
		"Quality assurance",
		"Testing",
		"Tracker",
		"User feedback"
	],
	"proprietary": [
		"Jira"
	],
	"default": {
		"addLineInDirectory": "AddHandler cgi-script .cgi\n\t\tOptions +ExecCGI",
		"autoLogin": {
			"inject": [
				{
					"url": "/index.cgi",
					"form": "form[id=mini_login_top]",
					"arg1": "input[name=Bugzilla_login]",
					"arg2": "input[name=Bugzilla_password]",
					"arg3": "input[type=submit]",
					"val1": 0,
					"val2": 2
				}
			],
			"post": [
				{
					"url": "/index.cgi",
					"arg1": "username",
					"arg2": "password",
					"val1": 0,
					"val2": 2
				}
			]
		},
		"config": true,
		"enabled": true,
		"followSymLinks": true,
		"localPort": 9409,
		"permissions": [
			"user"
		],
		"reset": true,
		"setup": true,
		"setupDependencies": [],
		"setupRoot": true
	}
}
