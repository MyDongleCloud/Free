[Unit]
Description=OpenObserve
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
EnvironmentFile=/disk/admin/modules/openobserve/env
ExecStart=/usr/local/bin/openobserve
WorkingDirectory=/disk/admin/modules/openobserve
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin

[Install]
WantedBy=multi-user.target
