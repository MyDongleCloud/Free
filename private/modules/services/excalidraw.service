[Unit]
Description=Excalidraw
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin
ExecStart=serve -s excalidraw-app/build -l 8114
WorkingDirectory=/usr/local/modules/excalidraw

[Install]
WantedBy=multi-user.target
