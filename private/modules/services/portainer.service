[Unit]
Description=Portainer
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
ExecStart=/usr/local/modules/portainer/portainer --data "/disk/admin/modules/portainer" --http-enabled --bind=:9000 --bind-https "127.0.0.1:19443"
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin

[Install]
WantedBy=multi-user.target
