[Unit]
Description=MicroBin
After=network.target

[Service]
Type=simple
WorkingDirectory=/disk/admin/modules/microbin
ExecStart=/bin/sh -c '. /disk/admin/modules/microbin/.env && exec /usr/local/bin/microbin'
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin

[Install]
WantedBy=multi-user.target
