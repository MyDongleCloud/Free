[Unit]
Description=Signoz
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin
ExecStart=/usr/local/modules/signoz/bin/signoz server --config /disk/admin/modules/signoz/config.yaml
WorkingDirectory=/disk/admin/modules/signoz

[Install]
WantedBy=multi-user.target
