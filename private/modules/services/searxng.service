[Unit]
Description=SearXNG
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin
ExecStart=/usr/local/modules/searxng/penv/bin/python3 searx/webapp.py
WorkingDirectory=/usr/local/modules/searxng
Environment=SEARXNG_SETTINGS_PATH=/disk/admin/modules/searxng/settings.yml

[Install]
WantedBy=multi-user.target
