[Unit]
Description=Home Assistant
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
ExecStart=/usr/local/modules/homeassistant/bin/hass --config /disk/admin/modules/homeassistant/
WorkingDirectory=/disk/admin
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin

[Install]
WantedBy=multi-user.target
