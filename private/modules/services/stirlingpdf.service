[Unit]
Description=Stirling-PDF
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin
ExecStart=/usr/bin/java -Xmx512m -jar /usr/local/modules/stirlingpdf/stirling-pdf-1.0.2.jar
WorkingDirectory=/disk/admin/modules/stirlingpdf
Environment="DISABLE_ADDITIONAL_FEATURES=true"
Environment="ENDPOINTS_GROUPSTOREMOVE=LibreOffice,OCR"

[Install]
WantedBy=multi-user.target
