[Unit]
Description=Pinchflat
After=network.target

[Service]
Environment=MEDIA_PATH=/disk/admin/modules/pinchflat/downloads
Environment=CONFIG_PATH=/disk/admin/modules/pinchflat/config
Environment=PHX_SERVER=true
EnvironmentFile=/disk/admin/modules/pinchflat/config/env
Type=simple
ExecStart=/usr/local/modules/pinchflat/_build/prod/rel/pinchflat/bin/pinchflat start
WorkingDirectory=/usr/local/modules/pinchflat/_build/prod/rel/pinchflat
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin

[Install]
WantedBy=multi-user.target
