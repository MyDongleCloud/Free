[Unit]
Description=Piped
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=300s
OnFailure=notify-failure@%n.service

[Service]
Restart=on-failure
RestartMode=direct
Type=simple
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s
User=admin
ExecStart=/usr/bin/java -jar /usr/local/modules/piped/pipedbackend/build/libs/piped-1.0-all.jar
WorkingDirectory=/disk/admin/modules/piped

[Install]
WantedBy=multi-user.target
